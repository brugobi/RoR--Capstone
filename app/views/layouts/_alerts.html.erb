<div class='row'>
  <div class='col-sm-10 col-sm-offset-1'>
    <% flash.each do |type, msg| %>
      <div class="alert alert-<%= alert_type(type)%>">
        <a href="#" class="close" data-dismiss="alert">&#215; </a>
        <%= content_tag :div, msg, id: "flash_#{type}" if type.is_a?(String) %>
      </div>
    <% end %>
  </div>
</div>